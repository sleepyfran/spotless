{
  "name": "spotless",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/sleepyfran/spotless/issues"
  },
  "homepage": "https://github.com/sleepyfran/spotless#readme",
  "scripts": {
    "app:dev": "vite serve packages/app",
    "app:build": "tsc && vite build packages/app",
    "app:preview": "vite preview",
    "gen": "plop",
    "format": "prettier --write ./packages/**/*.{ts,tsx,json}"
  },
  "devDependencies": {
    "plop": "^3.1.2",
    "prettier": "^2.8.7"
  },
  "workspaces": [
    "packages/app",
    "packages/components/*",
    "packages/core/*"
  ]
}